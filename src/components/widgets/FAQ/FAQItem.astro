---
import type { FAQ } from '~/cms/types';
import { Icon } from 'astro-icon/components';

interface Props {
  faq: FAQ;
}

const {
  faq: { question, answer },
} = Astro.props;
---

<li class="group border-b border-white rounded-b-xl">
  <button class="flex min-h-[45px] w-full items-center py-2 text-start leading-tight">
    <h3 class="text-pycon-yellow font-bold text-base pl-4">{question}</h3>
    <Icon
      name="tabler:chevron-down"
      class="ml-auto flex-shrink-0 mr-4 h-8 transition-transform duration-300 group-has-[.expanded]:-rotate-180"
      height={24}
      width={24}
    />
  </button>
  <div class="text-sm grid grid-rows-[0fr] transition-[grid-template-rows] duration-300 ease-in-out">
    <div class="overflow-hidden">
      <p class="pl-4 py-2">{answer}</p>
    </div>
  </div>
</li>
