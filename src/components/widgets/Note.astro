---
import { Icon } from 'astro-icon/components';

const { class: className = '' } = Astro.props;
---

<section class={`rounded-2xl border border-white ${className}`}>
  <div class="flex gap-4 max-w-6xl mx-auto px-4 sm:px-6 py-4 text-md text-center font-medium">
    <span class="font-bold">
      <Icon name="questionmark" class="w-6 h-6" />
    </span>
    <slot name="content"/>
  </div>
</section>
