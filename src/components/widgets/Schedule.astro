---
import Headline from '~/components/ui/Headline.astro';
import { getImage } from 'astro:assets';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import ScheduleTable from './ScheduleTable.astro';
import _gridWarp3 from '~/assets/images/schedule/grid-warp-3.png';

const {
  title = '',
  subtitle = '',
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

const gridWarp3 = await getImage({ src: _gridWarp3, quality: 100 });
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`max-w-7xl relative w-full mx-auto ${classes?.container ?? ''}`}
  bg={bg}
>
  <Headline
    title={title}
    subtitle={subtitle}
    classes={{
      container: 'max-w-7xl px-4 md:px-6 text-left relative',
      title: 'font-black text-pycon-yellow text-5xl',
    }}
  />
  <div class="flex w-full">
    <ScheduleTable
      programScheduleInterval={60}
      program={[
        {
          title: 'Ingress',
          timeStart: 1200,
          timeEnd: 1230,
        },
        {
          title: 'Opening Remarks',
          speaker: { name: 'TBA' },
          timeStart: 1230,
          timeEnd: 1240,
        },
        {
          title: 'Keynote Speaker 1',
          speaker: { name: 'TBA' },
          timeStart: 1240,
          timeEnd: 1325,
        },
        {
          title: 'Lightning Talk 1',
          speaker: { name: 'TBA' },
          timeStart: 1325,
          timeEnd: 1345,
        },
        {
          title: 'Lightning Talk 2',
          speaker: { name: 'TBA' },
          timeStart: 1345,
          timeEnd: 1405,
        },
        {
          title: 'Lightning Talk 3',
          speaker: { name: 'TBA' },
          timeStart: 1405,
          timeEnd: 1425,
        },
        {
          title: 'Break',
          timeStart: 1425,
          timeEnd: 1445,
        },
        {
          title: 'Keynote Speaker 2',
          speaker: { name: 'TBA' },
          timeStart: 1445,
          timeEnd: 1530,
        },
        {
          title: 'Keynote Speaker 3',
          speaker: { name: 'TBA' },
          timeStart: 1530,
          timeEnd: 1615,
        },
        {
          title: 'Closing Remarks',
          speaker: { name: 'TBA' },
          timeStart: 1615,
          timeEnd: 1630,
        },
        {
          title: 'Picture Taking and Outro',
          timeStart: 1630,
          timeEnd: 1645,
        },
        {
          title: 'Networking',
          timeStart: 1645,
          timeEnd: 1700,
        },
      ]}
    />
    <div class="hidden xl:block basis-1/3 overflow-visible">
      <div
        class="hidden xl:block absolute inset-0 top-0 z-[-1] mix-blend-luminosity overflow-visible bg-no-repeat bg-contain bg-right"
        style={`background-image: url(${gridWarp3.src});`}
      >
      </div>
    </div>
  </div>
</WidgetWrapper>
