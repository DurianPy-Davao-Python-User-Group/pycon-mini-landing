---
import Headline from '~/components/ui/Headline.astro';
import { getImage, Image } from 'astro:assets';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import ScheduleTable from './ScheduleTable.astro';
import _gridWarp3 from '~/assets/images/schedule/grid-warp-3.png';

const {
  title = '',
  subtitle = '',

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;

const gridWarp3 = await getImage({ src: _gridWarp3, quality: 100 });
---

<WidgetWrapper
  id={id}
  isDark={isDark}
  containerClass={`max-w-7xl relative w-full mx-auto ${classes?.container ?? ''}`}
  bg={bg}
>
  <Headline
    title={title}
    subtitle={subtitle}
    classes={{
      container: 'max-w-7xl px-4 md:px-6 text-left',
      title: 'font-black text-pycon-yellow text-5xl',
    }}
  />
  <div class="flex w-full">
    <ScheduleTable
      programScheduleInterval={60}
      program={[
        {
          title: 'Ingress',
          timeStart: 1200,
          timeEnd: 1230,
        },
        {
          title: 'Opening Remarks',
          timeStart: 1230,
          timeEnd: 1240,
        },
        {
          title: 'Keynote Speaker 1',
          description: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit',
          timeStart: 1240,
          timeEnd: 1310,
        },
        {
          title: 'Lightning Talks',
          timeStart: 1310,
          timeEnd: 1410,
        },
        {
          title: 'Keynote Speaker 2',
          description: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit',
          timeStart: 1410,
          timeEnd: 1440,
        },
        {
          title: 'Keynote Speaker 3',
          description: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit',
          timeStart: 1440,
          timeEnd: 1510,
        },
        {
          title: 'Break',
          timeStart: 1510,
          timeEnd: 1530,
        },
        {
          title: 'Networking Session',
          timeStart: 1530,
          timeEnd: 1630,
        },
        {
          title: 'Closing Remarks',
          timeStart: 1630,
          timeEnd: 1645,
        },
        {
          title: 'Picture Taking and Outro',
          timeStart: 1645,
          timeEnd: 1700,
        },
      ]}
    />
    <div class="hidden xl:block basis-1/3 overflow-visible">
      <div
        class="hidden xl:block absolute inset-0 top-0 z-0 mix-blend-luminosity overflow-visible bg-no-repeat bg-contain bg-right"
        style={`background-image: url(${gridWarp3.src});`}
      >
      </div>
    </div>
  </div>
</WidgetWrapper>
