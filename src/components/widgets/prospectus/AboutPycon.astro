---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import { getImage } from 'astro:assets';
import _pyconBlueprint from '~/assets/images/pycon-blueprint.svg';
import { Icon } from 'astro-icon/components';

const pyconBlueprint = await getImage({ src: _pyconBlueprint, width: 420, height: 496, quality: 100 });
---

<WidgetWrapper containerClass={`max-w-7xl relative mx-auto flex p-8 md:p-16 !pt-0`}>
  <div class="md:basis-2/3">
    <h2 class="font-bold text-xl xl:mb-16 md:text-4xl text-pycon-yellow md:text-white">
      <span class="text-pycon-yellow">About</span> PyConf <br class="hidden md:block" />Mini Davao <span
        class="text-pycon-yellow">2024</span
      >
    </h2>
    <Icon name="quote" class="w-[80px] md:w-[100px] h-auto" />
    <p class="pl-8 md:pl-5 md:text-lg lg:text-2xl font-medium leading-6 lg:leading-9">
      PyConf Mini Davao 2024 is a half-day event dedicated to empowering the Python community in Davao City. Under the
      theme <span class="text-pycon-yellow">"Empowering Innovation Through Python" </span>this event will bring together
      Python developers, tech enthusiasts, and professionals to explore the role of Python in driving innovation within
      local startups and agencies.
    </p>
  </div>
  <!-- Right: Image thing -->
  <div class="relative md:basis-1/3">
    <div
      class="invisible md:visible absolute inset-0 top-0 z-0 bg-no-repeat bg-contain bg-center"
      style={`background-image: url(${pyconBlueprint.src});`}
    >
    </div>
  </div>
</WidgetWrapper>
