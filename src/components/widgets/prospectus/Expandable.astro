---
import { Icon } from 'astro-icon/components';

interface Props {
  title: string;
  icon?: string;
  items: string[];
}

const { title, icon, items } = Astro.props;
---

<li class="group border-b border-white">
  <button class="flex min-h-[45px] w-full items-center py-2 text-start leading-tight">
    {icon && <Icon name={icon} class="w-8 h-8 mr-2" />}
    <h3 class="text-pycon-yellow font-bold">{title}</h3>
    <Icon
      name="tabler:chevron-down"
      class="ml-auto h-8 transition-transform duration-300 group-has-[.expanded]:-rotate-180"
      height={24}
      width={24}
    />
  </button>
  <div class="grid grid-rows-[0fr] transition-[grid-template-rows] duration-300 ease-in-out">
    <div class="overflow-hidden">
      <ul class="list-disc p-4 pl-7">
        {items.map((item) => <li class="leading-7">{item}</li>)}
      </ul>
    </div>
  </div>
</li>
