---
import { type Speaker } from './speakersContent.ts';
import { Image } from 'astro:assets';
import SpeakersDesktop from './SpeakersDesktop.astro';
import SpeakersMobile from './SpeakersMobile.astro';

interface Props {
  speaker: Speaker;
}

const { speaker } = Astro.props;
---

<div class="group lg:border-[3px] lg:border-pycon-yellow rounded-md relative">
  <div class="h-72 w-72">
    <Image
      class="w-full lg:border-0 border-[3px] border-pycon-yellow rounded-full"
      src={speaker.image}
      alt={`${speaker.name.trim()}`}
      width={150}
      height={150}
    />
  </div>

  <!-- Responsive display -->

  <SpeakersDesktop speaker={speaker} />
  <SpeakersMobile speaker={speaker} />
</div>
