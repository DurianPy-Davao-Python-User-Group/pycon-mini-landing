---
import type { Speaker } from '~/cms/types';
import { Image } from 'astro:assets';

interface Props {
  speaker: Speaker;
}

const { speaker } = Astro.props;
---

<div
  class="sm:hidden group hover:bg-[#FEF85D1A] sm:border-pycon-yellow rounded-md relative w-[80vw] flex flex-col items-center pt-4 mb-4"
>
  <span class="group">
    <div class="h-60 w-60">
      <Image
        class="w-full border-[3px] border-pycon-yellow rounded-full"
        src={speaker.image}
        alt={`${speaker.name.trim()}`}
        width={150}
        height={150}
      />
    </div>
    <div class="flex group-hover:hidden flex-col text-white text-center font-bold mx-auto py-5">
      <span class="text-2xl">{speaker.name}</span>
      <span class="text-pycon-yellow">{speaker.position}</span>
    </div>
  </span>

  <div class="p-4 hidden w-full inset-0 group-hover:flex flex-col items-center justify-center text-center">
    <div class="text-pycon-yellow text-2xl font-bold pb-2">{speaker.name}</div>
    <div class="text-white font-bold italic">
      {speaker.talkTitle}
      <br />
      {speaker.position} | {speaker.company}
    </div>
    <div class="text-pycon-yellow text-lg font-bold py-5">"{speaker.talkTitle}"</div>
    <div class="text-white font-bold">
      {speaker.bionote}
    </div>
  </div>
</div>
