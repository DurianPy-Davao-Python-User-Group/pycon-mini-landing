---
import type { GroupedSponsorTier } from '~/cms/types';
import WidgetWrapper from '../../ui/WidgetWrapper.astro';
import SponsorType from './SponsorType.astro';

interface Props {
  sponsorsInfo: GroupedSponsorTier[];
}

const { sponsorsInfo } = Astro.props;
---

<WidgetWrapper containerClass="mb-10 font-montserrat lg:!pr-0">
  <!-- HEADER -->
  <div class="bg-container flex flex-col items-center justify-center md:m-5 p-5 md:rounded-2xl">
    <div class="flex w-full justify-center bg-radial-gradient from-[#FEF85D66] via-[#98943866] to-[#73737307] to-80%">
      <div
        class="font-extrabold text-4xl p-2 inline-block text-transparent bg-clip-text bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-[#FEF85D] to-[#989438]"
      >
        <h1>SPONSORS</h1>
      </div>
    </div>
    <p class="pt-2 pb-10 font-bold text-center text-xl">
      This event was made possible with the help of our generous sponsors
    </p>

    <!-- SPONSOR TIERS -->
    <div class="w-full flex flex-col gap-9">
      {sponsorsInfo.map((sponsorGroup) => <SponsorType sponsorGroup={sponsorGroup} />)}
    </div>
  </div>
</WidgetWrapper>

<style>
  .bg-radial-gradient {
    background: radial-gradient(circle at center, var(--tw-gradient-stops));
  }
  .bg-container {
    background: radial-gradient(
      154.07% 78.02% at 50% 74.62%,
      rgba(51, 0, 99, 0.25) 0%,
      rgba(60, 9, 108, 0.25) 50.5%,
      rgba(90, 24, 154, 0.25) 76.87%,
      rgba(88, 23, 151, 0.25) 80.81%,
      rgba(123, 44, 191, 0.25) 87.03%,
      rgba(157, 78, 221, 0.25) 92.83%
    );
  }
</style>
